{
    "family": "Dynamo-frontend",
    "containerDefinitions": [
        {
            "name": "dynamo-vllm-frontend",
            "image": "nvcr.io/NGC_ORG/dynamo-pipelines:vllm",
            "repositoryCredentials": {
                "credentialsParameter": "arn:aws:secretsmanager:us-east-2:AWS_ID:secret:ngc_nvcr_access"
            },
            "cpu": 0,
            "portMappings": [
                {
                    "name": "8000",
                    "containerPort": 8000,
                    "hostPort": 8000,
                    "protocol": "tcp",
                    "appProtocol": "http"
                }
            ],
            "essential": true,
            "entryPoint": [
                "sh",
                "-c"
            ],
            "command": [
                "cd src && uv run dynamo serve graphs.agg_router:Frontend -f configs/disagg_router.yaml"
            ],
            "environment": [
                {
                    "name": "ETCD_ENDPOINTS",
                    "value": "http://ETCDNATS_TASK_IP:2379"
                },
                {
                    "name": "NATS_SERVER",
                    "value": "nats://ETCDNATS_TASK_IP:4222"
                }
            ],
            "environmentFiles": [],
            "mountPoints": [],
            "volumesFrom": [],
            "ulimits": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/Dynamo-frontend",
                    "mode": "non-blocking",
                    "awslogs-create-group": "true",
                    "max-buffer-size": "25m",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "ecs"
                },
                "secretOptions": []
            },
            "systemControls": [],
            "resourceRequirements": [
                {
                    "value": "1",
                    "type": "GPU"
                }
            ]
        }
    ],
    "taskRoleArn": "arn:aws:iam::AWS_ID:role/ecsTaskExecutionRole",
    "executionRoleArn": "arn:aws:iam::AWS_ID:role/ecsTaskExecutionRole",
    "networkMode": "host",
    "volumes": [],
    "placementConstraints": [],
    "requiresCompatibilities": [
        "EC2"
    ],
    "cpu": "2048",
    "memory": "40960",
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    },
    "enableFaultInjection": false
}
